<div class="container">
  <div class="row justify-content-center">
    <div class="card col-md-6 p-3 shadow rounded">
      <h2>Leave application</h2>
      <%= form_for @leave do |f| %>
        <% if @leave.errors.any? %>
          <div id="error_explanation">
            <h2>
              <%= pluralize(@leave.errors.count, "error") %> prohibited
              this leave from being saved:
            </h2>
            <ul>
              <% @leave.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="control-group">
          <%= f.label :type, class: 'control-label' %>
          <%= collection_select( :leave, :leave_quotum_id, @leave_quota, :id, :leave_category, { :multiple => false }, {:class => 'form-control'}) %>
        </div>
        <div class='form-group'>
          Duration :<br>
          <%= f.label :from %>
          <%= f.date_field :from , class: 'form-control' %>
          <%= f.label :to %>
          <%= f.date_field :to , class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= f.label :half_day %>
          <%= f.check_box(:half_day, {}, "0.5")%>
        </div>
        <div class='form-group'>
          <%= f.label :reason %>
          <%= f.text_area :reason , class: 'form-control' %>
        </div>
        <div>
          <%= f.submit :class =>'btn btn-primary btn-block' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
