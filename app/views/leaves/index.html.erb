<div class='container'>
  <center><h2>Summary</h2></center>
  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Employee Id</th>
        <th>From</th>
        <th>Reason</th>
        <th>Category</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% @leaves.each do |leave| %>
        <tr>
          <td><%= leave.id %></td>
          <td><%= leave.employee_id %></td>
          <td><%= leave.from %></td>
          <td><%= leave.to %></td>
          <td><%= leave.category %></td>
          <td><%= leave.status %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>